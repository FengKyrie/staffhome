<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staffhome.mapper.PositionMapper">

	<insert id="addPosition" parameterType="Position">
		insert into post(name,info) values(#{name},#{info})
	</insert>

	<delete id="deletePosition" parameterType="String">
		delete from
		post
		where
		name=#{name}
	</delete>

	<update id="updatePosition" parameterType="Position">
		update post
		set
		name=#{name},info=#{info} where id=#{id}
	</update>

	<select id="querySimilar" parameterType="String" resultType="Position">
		select * from
		post
		where name like #{name}
	</select>

	<select id="queryAllPositions" parameterType="Position" resultType="Position">
		select * from
		post
	</select>
</mapper>